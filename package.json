{
  "name": "quadrats",
  "description": "Quadrats",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Quadrats/quadrats.git"
  },
  "author": "Rytass",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean && lerna clean",
    "build:clean": "lerna run build:clean --stream --parallel",
    "build": "lerna run build --stream --sort",
    "format": "prettier './**/*.{json,md,mdx}' --write",
    "lint:css": "stylelint ./**/*.scss",
    "lint:ts": "eslint . --ext .js,.ts,.tsx,.mdx",
    "lint": "npm run lint:ts && npm run lint:css",
    "test:clean": "rm -rf ./coverage",
    "test:coverage": "jest --coverage",
    "test": "jest",
    "storybook:start": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "storybook:deploy": "storybook-to-ghpages --out ./public",
    "commit": "git-cz",
    "release": "lerna version patch && npm run build && lerna publish from-package",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-controls": "^6.4.19",
    "@storybook/addon-storysource": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/cli": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@storybook/storybook-deployer": "^2.8.10",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "awesome-typescript-loader": "^5.2.1",
    "commitizen": "^4.2.4",
    "css-loader": "^6.7.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-typescript": "^16.1.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "slate-hyperscript": "^0.67.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.6.0",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0"
  }
}
