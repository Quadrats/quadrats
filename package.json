{
  "name": "quadrats",
  "description": "Quadrats",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Quadrats/quadrats.git"
  },
  "author": "Rytass",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean && lerna clean",
    "build:clean": "lerna run build:clean --stream --parallel",
    "build": "lerna run build --stream --sort",
    "format": "prettier './**/*.{json,md,mdx}' --write",
    "lint:css": "stylelint ./**/*.scss",
    "lint:ts": "eslint . --ext .js,.ts,.tsx,.mdx",
    "lint": "npm run lint:ts && npm run lint:css",
    "test:clean": "rm -rf ./coverage",
    "test:coverage": "jest --coverage",
    "test": "jest",
    "storybook:start": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "storybook:deploy": "storybook-to-ghpages --out ./public",
    "commit": "git-cz",
    "release": "lerna version && npm run build && lerna publish from-package"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@storybook/addon-docs": "^6.1.10",
    "@storybook/addon-knobs": "^6.1.10",
    "@storybook/addon-storysource": "^6.1.10",
    "@storybook/cli": "^6.1.10",
    "@storybook/react": "^6.1.10",
    "@storybook/storybook-deployer": "^2.8.7",
    "@types/fs-extra": "^9.0.4",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "autoprefixer": "^10.0.4",
    "awesome-typescript-loader": "^5.2.1",
    "commitizen": "^4.2.2",
    "css-loader": "^5.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "postcss": "^8.1.14",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.1",
    "rollup": "^2.34.2",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "slate-hyperscript": "^0.59.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "ts-jest": "^26.4.4",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.2"
  }
}
