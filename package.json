{
  "name": "quadrats",
  "description": "Quadrats",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Quadrats/quadrats.git"
  },
  "author": "Rytass",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean && lerna clean",
    "build:clean": "lerna run build:clean --stream --parallel",
    "build": "lerna run build --stream --sort",
    "format": "prettier './**/*.{json,md,mdx}' --write",
    "lint:css": "stylelint ./**/*.scss",
    "lint:ts": "eslint . --ext .js,.ts,.tsx,.mdx",
    "lint": "npm run lint:ts && npm run lint:css",
    "test:clean": "rm -rf ./coverage",
    "test:coverage": "jest --coverage",
    "test": "jest",
    "storybook:start": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:deploy": "storybook-to-ghpages --out ./public",
    "commit": "git-cz",
    "release": "lerna version patch && npm run build && lerna publish from-package",
    "prepare": "husky install"
  },
  "packageManager": "yarn@4.7.0",
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
