{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@quadrats/common/*": ["common/*/src"],
      "@quadrats/core": ["core/src"],
      "@quadrats/core/*": ["core/*/src"],
      "@quadrats/icons": ["icons/src"],
      "@quadrats/locales": ["locales/src"],
      "@quadrats/react": ["react/src"],
      "@quadrats/react/*": ["react/*/src"],
      "@quadrats/theme": ["theme/src"],
      "@quadrats/utils": ["utils/src"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.dev.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
